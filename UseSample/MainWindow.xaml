<Window x:Class="UseSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="480" ResizeMode="NoResize">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Vertical" Width="230">
                <Button Content="Mouse Hook" Name="MouseHookButton" Margin="20"/>
                <ListBox Name="MouseHookInfo" Height="200" Margin="10" />
            </StackPanel>
            <StackPanel Orientation="Vertical" Width="230">
                <Button Content="Keyboard Hook" Name="KeyboardHookButton" Margin="20"/>
                <ListBox Name="KeyboardHookInfo" Height="200" Margin="10" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
